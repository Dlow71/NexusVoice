    # OpenAI API配置 - 开发环境可以先使用占位符
    api-key: sk-your-openai-api-key-here
    base-url: https://api.openai.com/v1
    # 模型配置
    chat-model:
      model-name: gpt-4o-mini
      temperature: 0.7
      max-tokens: 2000
    embedding-model:
